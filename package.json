{
  "name": "material-audio-player",
  "version": "1.0.0",
  "description": "A customizable audio player with material style",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build:demo": "vite build",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "css": "npm-run-all css-compile css-prefix css-minify",
    "css-compile": "sass --style expanded --embed-sources --error-css styles/main.scss dist/css/audio-player.css",
    "css-prefix": "postcss --config build/postcss.config.mjs --replace \"dist/css/*.css\" \"!dist/css/*.rtl*.css\" \"!dist/css/*.min.css\"",
    "css-minify": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output dist/css/ --batch --batch-suffix \".min\" \"dist/css/*.css\" \"!dist/css/*.min.css\" \"!dist/css/*rtl*.css\"",
    "js": "npm-run-all js-compile js-minify",
    "js-compile": "npm-run-all js-compile:esm js-compile:umd",
    "js-compile:esm": "rollup --environment ESM:true,BUNDLE:false --config build/rollup.config.mjs --sourcemap",
    "js-compile:umd": "rollup --environment ESM:false,BUNDLE:false --config build/rollup.config.mjs --sourcemap",
    "js-minify": "npm-run-all js-minify:esm js-minify:umd",
    "js-minify:esm": "terser --compress passes=2 --mangle --comments \\\"/^!/\\\" --source-map \"content=dist/js/audio-player.esm.js.map,includeSources,url=audio-player.esm.min.js.map\" --output dist/js/audio-player.esm.min.js dist/js/audio-player.esm.js",
    "js-minify:umd": "terser --compress passes=2 --mangle --comments \\\"/^!/\\\" --source-map \"content=dist/js/audio-player.js.map,includeSources,url=audio-player.min.js.map\" --output dist/js/audio-player.min.js dist/js/audio-player.js",
    "build": "npm-run-all --aggregate-output --parallel css js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yaztak/Material-HTML-Audio-Player.git"
  },
  "keywords": [
    "javascript",
    "audio",
    "player",
    "material"
  ],
  "author": "yaztak",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yaztak/Material-HTML-Audio-Player/issues"
  },
  "homepage": "https://github.com/yaztak/Material-HTML-Audio-Player#readme",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "clean-css-cli": "^5.6.3",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.3",
    "node-sass": "^9.0.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^7.3.4",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.4.1",
    "rollup": "^4.12.0",
    "sass": "^1.69.7",
    "sass-loader": "^13.3.3",
    "terser": "^5.28.1",
    "vite": "^6.0.3"
  }
}
